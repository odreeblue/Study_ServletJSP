CREATE TABLE NOTICE
(
     ID	        BIGINT,
     TITLE 		NVARCHAR(100),
     WRITER_ID	NVARCHAR(50),
     CONTENT	LONGTEXT,
     REGDATE  	DATETIME,
     HIT		BIGINT,
     FILES		NVARCHAR(1000)
);

