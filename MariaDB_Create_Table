CREATE TABLE COMMENT
(
     ID		    BIGINT,
     CONTENT	NVARCHAR(2000),
     REGDATE  	DATETIME,
     WRITER_ID	NVARCHAR(50),
     NOTICE_ID	BIGINT
);

CREATE TABLE ROLE
(
     ID		        VARCHAR(50),
     DISCRIPTION 	NVARCHAR(500)
);

CREATE TABLE MEMBER_ROLE
(
     MEMBER_ID	    NVARCHAR(50),
     ROLE_ID		VARCHAR(50)
);